<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@color/title_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="报销单"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="25dp">

                    <TextView
                        android:id="@+id/commit_cclvf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="出差旅费\n报销单"
                        android:drawableTop="@drawable/icon_cclvf"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_gcxmsp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工程项目\n审批单"
                        android:drawableTop="@drawable/icon_gcxmsp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_jksqd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="借款\n申请单"
                        android:drawableTop="@drawable/icon_jksqd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_fyzfspd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="费用支付\n审批单"
                        android:drawableTop="@drawable/icon_fyzfspd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@color/title_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="审批单"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="25dp">

                    <TextView
                        android:id="@+id/commit_ccspd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="出差\n审批单"
                        android:drawableTop="@drawable/icon_ccspd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_ywzdspd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="业务招待\n审批单"
                        android:drawableTop="@drawable/icon_ywzdspd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_htsp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="合同\n审批单"
                        android:drawableTop="@drawable/icon_htspd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_gcsysqd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="公车使用\n审批单"
                        android:drawableTop="@drawable/icon_gcsyspd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@color/title_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="验收单"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="25dp">

                    <TextView
                        android:id="@+id/commit_rkd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="入库单"
                        android:drawableTop="@drawable/icon_rkd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_ckd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="出库单"
                        android:drawableTop="@drawable/icon_ckd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_gdzcysd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="固定资产\n验收单"
                        android:drawableTop="@drawable/icon_gdzcysd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/commit_dzyhpysd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="低值易耗\n品验收单"
                        android:drawableTop="@drawable/icon_dzyh"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
