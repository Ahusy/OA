<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点:"
        android:textColor="@color/text_color"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/item_steps_one_choose_address"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:maxLength="15"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@drawable/shape_stroke_5b0ef_5dp_enble"
        android:hint="请选择地点"/>

    <TextView
        android:id="@+id/item_steps_one_choose_delete"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:background="@drawable/shape_stroke_5_cheng"
        android:text="删除"
        android:textColor="#FE9A47"
        android:gravity="center"
        android:layout_marginStart="10dp"/>

</LinearLayout>
