<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请选择费用类型"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="确定"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F2F2F2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_ccf"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="车船费"
            android:textColor="@drawable/submit_checked_text"/>

        <CheckBox
            android:id="@+id/checkbox_zsf"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="住宿费"
            android:textColor="@drawable/submit_checked_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_pxf"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="培训费"
            android:textColor="@drawable/submit_checked_text"/>

        <CheckBox
            android:id="@+id/checkbox_qtfy"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="其他费用"
            android:textColor="@drawable/submit_checked_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_hyf"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="会议费"
            android:textColor="@drawable/submit_checked_text"/>

        <CheckBox
            android:id="@+id/checkbox_ccbz"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="出差补助"
            android:textColor="@drawable/submit_checked_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_hsbz"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="伙食补助"
            android:textColor="@drawable/submit_checked_text"/>

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/submit_checked"
            android:button="@null"
            android:gravity="center"
            android:text="住宿费"
            android:textColor="@drawable/submit_checked_text"
            android:visibility="invisible"/>

    </LinearLayout>


</LinearLayout>