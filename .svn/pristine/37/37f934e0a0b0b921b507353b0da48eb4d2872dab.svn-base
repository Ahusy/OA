<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_white"
    android:orientation="vertical"
    android:paddingBottom="25dp">

    <TextView
        android:id="@+id/dialog_two_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:padding="@dimen/dp_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二级密码:"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入二级密码"
            android:layout_toEndOf="@+id/text"
            android:inputType="textPassword"
            android:layout_marginStart="@dimen/dp_10"/>

    </RelativeLayout>

    <View style="@style/person_split_match"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_two_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_solid_10b0ef_15dp"
            android:text="确认租用"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/common_spilt_line"/>

        <TextView
            android:id="@+id/dialog_two_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/shape_solid_a3a4a7_5dp"
            android:textSize="17sp"/>
    </LinearLayout>


</LinearLayout>